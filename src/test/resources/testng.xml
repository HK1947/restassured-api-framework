<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Automation Suite" verbose="1" parallel="methods" thread-count="3">

    <!-- Smoke Tests -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.api.tests.AuthApiTests"/>
            <class name="com.api.tests.UserApiTests"/>
        </classes>
    </test>

    <!-- Regression Tests -->
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.api.tests.AuthApiTests"/>
            <class name="com.api.tests.UserApiTests"/>
        </classes>
    </test>

    <!-- Negative Tests -->
    <test name="Negative Tests">
        <groups>
            <run>
                <include name="negative"/>
            </run>
        </groups>
        <classes>
            <class name="com.api.tests.AuthApiTests"/>
            <class name="com.api.tests.UserApiTests"/>
        </classes>
    </test>

</suite>
